rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // User profile images
    match /users/{userId}/photos/{photoId} {
      // Allow authenticated users to read any profile photo
      allow read: if request.auth != null;
      
      // Allow users to upload/update/delete only their own photos
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Images only
    }
    
    // Chat media (images sent in messages)
    match /chat/{matchId}/{messageId} {
      // Allow authenticated users to read chat media
      allow read: if request.auth != null;
      
      // Allow users to upload chat media
      // TODO: Add validation to ensure user is part of the match
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*|video/.*'); // Images and videos
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
